import random

def digi_hunt():
    number_to_guess = random.randint(1, 50)
    attempts = 5
    print("ğŸ¯ Welcome to Digi Hunt!")
    print("Guess the number between 1 and 50. You have 5 attempts.\n")

    for attempt in range(1, attempts + 1):
        try:
            guess = int(input(f"Attempt {attempt}: Enter your guess â†’ "))
            if guess == number_to_guess:
                print("ğŸ‰ Congratulations! You guessed the correct number!")
                break
            elif guess < number_to_guess:
                print("ğŸ”¼ Try a higher number.")
            else:
                print("ğŸ”½ Try a lower number.")
        except ValueError:
            print("âŒ Please enter a valid number.")

    else:
        print(f"\nğŸ˜ Game Over! The number was: {number_to_guess}")

# Run the game
digi_hunt()